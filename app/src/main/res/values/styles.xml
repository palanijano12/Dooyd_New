<resources xmlns:ns1="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">

        <item name="backgroundTint">@color/colorAccent</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppButtonStyleBlack" parent="Widget.MaterialComponents.Button">

        <item name="backgroundTint">@color/colorBlack</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTextInputLayoutStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>

    </style>

    <style name="AppTextInputEditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart" ns1:ignore="NewApi">12dp</item>
        <item name="android:paddingEnd" ns1:ignore="NewApi">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>

    </style>


    <style name="AppTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTabViewStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="tabTextColor">@color/tab_text_selector</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabIconTint">@color/tab_text_selector</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

</resources>
