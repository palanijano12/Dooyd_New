<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.android.dooyd">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name="views.activities.ProductActivity"/>
        <activity
                android:name="views.activities.SplashScreenActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name="views.activities.MainActivity"
                android:label="@string/app_name"/>
        <activity
                android:name="views.activities.RegistrationActivity"
                android:label="@string/registration"/>
        <activity
                android:name="views.activities.ForgotPasswordActivity"
                android:label="@string/forget_activity_label"/>
        <activity
                android:name="views.activities.LoginActivity"
                android:label="@string/login"/>
        <activity android:name="views.activities.ProductDetailActivity"/>
    </application>

</manifest>